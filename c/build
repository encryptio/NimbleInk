#!/bin/sh

if [ "`uname`" == "Linux" ]; then
    LINK="`sdl-config --cflags --libs` -lSDL_image -lGL -lGLU"
elif [ "`uname`" == "Darwin" ]; then
    LINK="`sdl-config --cflags --libs` -framework OpenGL -lSDL_image"
else
    echo "Don't know how to link on `uname`";
fi

cc -Wall -O2 -std=c99 -o view $LINK $@ main.c image.c archive.c filetype.c

